<configuration>
    <!-- File appender (clears log file at each execution) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/application.log</file>
        <append>false</append>
        <encoder>
            <pattern>%-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set logging level for your application -->
    <logger name="ds" level="INFO" />
    
    <!-- Set logging level for Akka (to reduce noise) -->
    <logger name="akka" level="WARN" />
    
    <!-- Root logger - writes to file -->
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>
